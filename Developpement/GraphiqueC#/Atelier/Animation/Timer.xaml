<Window x:Class="Animation.Timer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Timer" Height="300" Width="300">
    <Canvas>
        <Image Source="chat.jpg" Name="imgChat" Canvas.Top="20" Canvas.Left="0" Width="40"></Image>
        <WrapPanel>
            <Button Content="Agrandir" Name="btnAgrandir" Click="btnAgrandir_Click"></Button>
            <Button Content="Retreci" Name="btnRetreci" Click="btnRetreci_Click"/>
            <Button Content="MoveRight" Name="btnMoveRight" Click="btnMoveRight_Click"/>
            <Button Content="MoveLeft" Name="btnMoveLeft" Click="btnMoveLeft_Click"/>
            <Button Content="MoveTop" Name="btnMoveTop" Click="btnMoveTop_Click"/>
            <Button Content="MoveBottom" Name="btnMoveBottom" Click="btnMoveBottom_Click"/>
        </WrapPanel>
    </Canvas>
</Window>
